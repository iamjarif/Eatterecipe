<h1>Recipe</h1>
<% if(recipe !==null ) {%>


    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/uploads/<%- recipe.image %>" style="top: 20px;" 
            alt="<%- recipe.image %>"
                class="img-fluid sticky-top" loading="lazy">
        </div>

        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12">
                    <h1>
                        <%= recipe.name %>
                    </h1>
                </div>
                <div class="col-12 mb-4">
                    <i class="bi bi-tag"></i>
                    <%- recipe.category %>
                        <br> <br>
                        <%- recipe.description %>
                </div>
                <div class="col-12">
                    <h4>Ingredients</h4>
                        <%- recipe.ingredients %>
                </div>
                <div class="col-12" style="white-space: pre-line;">
                    <h4>Cooking Instructions</h4>
                    <%- recipe.instructions %>
                </div>
            </div>
            <br><br>
        </div>
    </div>
    <% } else{ %>
    <p>No Items Found</p>
    <% } %>